@typeparam T

@namespace Movies.BlazorWeb.Infrastructure.Shared.Entities

@*@Template(Value)*@

<td>
    @if (CanEditAndDelete)
    {
        <button class="btn btn-warning" @onclick="OnEditAsync">Update</button>
    }
</td>
<td>
    @if (CanEditAndDelete)
    {
        <button class="btn btn-danger" @onclick="ShowDeleteDialog">Delete</button>
    }
</td>


@if (deleteDialogOpen)
{
    <ConfirmDialog Title="Are you sure?"
                   Text="Do you want to delete this entry?"
                   OnClose="@OnDeleteAsync"
                   DialogType="ConfirmDialog.ModalDialogType.DeleteCancel">
    </ConfirmDialog>
}